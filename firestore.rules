rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow a user full access (read, write, delete) to their own document
      // if they are authenticated. This is the primary security rule.
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
