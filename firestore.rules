rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This is a simplified rule for diagnostic purposes.
    // It allows any authenticated user to read and write to their own document,
    // bypassing the complex data validation for now.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
